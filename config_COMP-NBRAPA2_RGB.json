{
    "name": "MVLMModel_DTU3D",
    "n_gpu": 0,

    "arch": {
        "type": "MVLMModel",
        "args": {
            "n_landmarks": 73,
            "n_features": 256,
            "dropout_rate": 0.2,
            "image_channels": "RGB"
        }
    },
    "data_loader": {
        "type": "DTU3DDataLoader",
        "args":{
            "data_dir": "F:/FaceCNN06082019/",
            "heatmap_size": 256,
            "image_size": 256,
            "image_channels": "RGB",
            "n_views": 96,
            "batch_size": 8,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 8
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": "mse_loss",
    "metrics": [
        "my_metric", "my_metric2"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": false
    },
    "process_3d": {
        "filter_view_lines": "quantile",
        "heatmap_max_quantile": 0.5,
        "heatmap_abs_threshold": 0.5,
        "write_renderings": true,
        "off_screen_rendering": true
    }
}
